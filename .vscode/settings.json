{
    "files.exclude": {
        // This is only needed because code generated by the "built_value_generator" package can't
        // currently generate its ".g.dart" files in a separate directory, so they end up sitting
        // alongside their original files, creating clutter
        "**/*.g.dart": true
    },
    "dart.lineLength": 100,
    "[dart]": {
        "editor.rulers": [
            100
        ]
    }
}